<body style="padding:16px">
  <form>
      <div class="form-group">
        <label for="nameCard">Nombre del titular de la tarjeta</label>
        <input type="text" class="form-control" id="nameCard">
      </div>
      <div class="form-group">
        <label for="cardNumber">Numero de la tarjeta</label>
        <input type="text" class="form-control" id="cardNumber">
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="expDate">Expiration Date</label>
            <input type="text" class="form-control" id="expDate">
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="secNumber">Security Number</label>
            <input type="text" class="form-control" id="secNumber">
          </div>
        </div>
      </div>
  </form>
  <button type="button" class="btn btn-primary">Pagar</button>

  


